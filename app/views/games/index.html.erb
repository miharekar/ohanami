<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Games</h1>
    <%= link_to "New game", new_game_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <ul id="games" class="min-w-full">
    <% @games.each do |game| %>
      <li>
        <%= link_to game.name, game_path(game) %>
      </li>
    <% end %>
  </ul>
</div>
